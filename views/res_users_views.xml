<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_users_form_inherit_add_tabs" model="ir.ui.view">
        <field name="name">res.users.form.inherit.add.tabs</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">

            <!-- Insert inside the existing notebook on the user form -->
            <xpath expr="//form/sheet/notebook" position="inside">
                <page string="Locations">
                    <group>
                        <field name="partner_id" string="Partner ID"/>
                        <field name="user_type"/>
                        <field name="country_id"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
